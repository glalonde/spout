#version 450
layout(local_size_x = 512, local_size_y = 1, local_size_z = 1) in;

struct Particle {
  ivec2 position;
  ivec2 velocity;
};

layout(std430, binding = 0) buffer Particles {
  Particle particles[];
};

void main() {
  uint gid = gl_GlobalInvocationID.x;
  Particle p = particles[gid];
  p.position += p.velocity;
  particles[gid] = p;
}